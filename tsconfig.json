{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "types": ["jest", "react-native"],
    "esModuleInterop": true,
    "paths": {
      "@lib/*": ["./lib/*"],
      "@app/*": ["./app/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
