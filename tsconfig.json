{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "types": ["jest", "react-native", "node"],
    "esModuleInterop": true,
    "paths": {
      "~/*": ["./*"],
      "@lib/*": ["./lib/*"],
      "@app/*": ["./app/*"],
      "@hook/*": ["./hook/*"],
      "@api/*": ["./api/*"],
      "expo-router": ["./node_modules/expo-router"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
